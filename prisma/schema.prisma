generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

// Data model

model User {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  firstName  String
  lastName   String
  password   String
  token      String
}

model Role {
  id     Int         @id @default(autoincrement())
  name   String      @unique
  grant  String[]
}

model Recipe {
  id          Int         @id @default(autoincrement())
  name        String
  ingredients String[]
  url         String
}

model Invitation {
  id          Int        @id @default(autoincrement())
  code        String     @unique
}
